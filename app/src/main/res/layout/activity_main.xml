<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="ium.earlywarning.sapienzaapps.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ium.earlywarning.sapienzaapps.MainActivity">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/danger_gradient"
            android:gravity="center_horizontal"
            android:text="TERREMOTO"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            app:cardElevation="6dp"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/dove_ti_trovi_tw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consigli: Dove sei?"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/button_chiuso"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/apartment"
                    android:text="al Chiuso"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button_aperto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/forest"
                    android:text="all&apos;Aperto"
                    android:textSize="40sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardElevation="7dp"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/sos_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/ambulance"
                android:text="SOS"
                android:textSize="40sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>